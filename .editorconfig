# editorconfig.org
root = true

# all text files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = false

# C#, Razor, XML, SpecFlow
[*.{cs,cshtml,xml,xsd,feature}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# JavaScript, JSON, Jade, Ruby
[*.{js,json,jade,rb}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# DO NOT trim trailing whitespace: Razor, Jade, Markdown
[*.{cshtml,jade,md}]
trim_trailing_whitespace = false

# Special case: .NET configs
[{App.config,app.config,web.config}]
indent_style = space
indent_size = 4

# Special case: NuGet config
[{packages.config}]
indent_style = space
indent_size = 2